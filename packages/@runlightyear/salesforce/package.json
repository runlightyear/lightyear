{
  "name": "@runlightyear/salesforce",
  "version": "0.10.2",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "nodemon --exec \"npx tsup src/index.ts --dts\" --watch src --ext ts,js",
    "lint": "eslint src/**.ts",
    "prettier:check": "prettier --check src",
    "compile": "tsc --noEmit",
    "build": "tsup src/index.ts --dts",
    "docs:extract": "api-extractor run --local --verbose"
  },
  "dependencies": {
    "@runlightyear/lightyear": "workspace:*"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.52.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.4",
    "@types/nodemon": "^1.19.6",
    "@typescript-eslint/parser": "^8.35.1",
    "api-extractor-config": "workspace:*",
    "eslint": "^9.30.1",
    "eslint-config-custom": "workspace:*",
    "nodemon": "^2.0.22",
    "tsconfig": "workspace:*",
    "tsdoc-config": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts"
}
