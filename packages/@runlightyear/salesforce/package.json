{
  "name": "@runlightyear/salesforce",
  "version": "0.10.2",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "nodemon --exec \"npx tsup src/index.ts --dts\" --watch src --ext ts,js",
    "lint": "eslint src/**.ts",
    "prettier:check": "prettier --check src",
    "compile": "tsc --noEmit",
    "build": "tsup src/index.ts --dts",
    "docs:extract": "api-extractor run --local --verbose"
  },
  "dependencies": {
    "@runlightyear/lightyear": "workspace:*"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.25.3",
    "@microsoft/api-documenter": "^7.26.27",
    "eslint-config-custom": "workspace:*",
    "@runlightyear/lightyear": "workspace:*",
    "tsconfig": "workspace:*",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.19.68",
    "@typescript-eslint/parser": "^8.35.1",
    "babel-jest": "^29.7.0",
    "@microsoft/api-extractor": "^7.38.5",
    "@types/nodemon": "^1.19.2",
    "eslint": "^9.26.0",
    "nodemon": "^2.0.19",
    "tsdoc-config": "workspace:*",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts"
}
