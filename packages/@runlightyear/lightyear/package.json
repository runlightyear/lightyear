{
  "name": "@runlightyear/lightyear",
  "version": "2.3.2",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "nodemon --exec \"npx tsup src/index.ts --dts\" --watch src --ext ts,js",
    "lint": "eslint src/**.ts",
    "prettier:check": "prettier --check src",
    "compile": "tsc --noEmit",
    "build": "tsup src/index.ts --dts",
    "test": "vitest run",
    "test:watch": "vitest",
    "docs:extract": "api-extractor run --local --verbose"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "graphql": "^16.11.0",
    "json-schema-to-ts": "^3.1.1",
    "lodash": "^4.17.21",
    "query-string": "^7.1.3",
    "tiny-invariant": "^1.3.3",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.52.8",
    "@types/aws-lambda": "^8.10.150",
    "@types/lodash": "^4.17.20",
    "@types/node": "^20.19.4",
    "@types/node-fetch": "^2.6.12",
    "@typescript-eslint/parser": "^8.35.1",
    "api-extractor-config": "^0.0.0",
    "eslint": "^9.30.1",
    "eslint-config-custom": "^0.0.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.2",
    "tsconfig": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "description": "The fastest and easiest way for developers to integrate web-based applications.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  }
}
