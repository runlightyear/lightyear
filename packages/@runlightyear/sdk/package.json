{
  "name": "@runlightyear/sdk",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "nodemon --exec \"npx tsup src/index.ts --dts\" --watch src --ext ts,js",
    "lint": "eslint src/**.ts",
    "prettier:check": "prettier --check src",
    "compile": "tsc --noEmit",
    "build": "tsup src/index.ts --dts",
    "test": "vitest run",
    "test:watch": "vitest",
    "docs:extract": "api-extractor run --local --verbose"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.38.5",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.11.24",
    "@typescript-eslint/parser": "^8.32.1",
    "api-extractor-config": "workspace:*",
    "eslint": "^9.26.0",
    "eslint-config-custom": "*",
    "nodemon": "^2.0.19",
    "tsconfig": "workspace:*",
    "tsdoc-config": "workspace:*",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "description": "TypeScript SDK for building integrations with Lightyear - the fastest and easiest way for developers to integrate web-based applications.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "sdk",
    "integration",
    "typescript",
    "lightyear",
    "api"
  ]
}
