{
  "name": "@runlightyear/sdk",
  "version": "0.1.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts",
    "build:handlers": "node handlers.config.js",
    "dev": "tsup src/index.ts --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:handlers": "vitest run src/handlers/",
    "lint": "eslint src/",
    "example:basic": "npx tsx examples/basic-collection.ts",
    "example:registry": "npx tsx examples/registry-example.ts",
    "example:customApps": "npx tsx examples/customApps-example.ts",
    "example:handlers": "npx tsx examples/handlers-example.ts",
    "extract-api": "api-extractor run --local",
    "deploy:handlers": "npm run build:handlers && echo 'Handlers bundle ready for deployment at dist/handlers.js'"
  },
  "dependencies": {
    "json-schema-to-ts": "^3.1.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.38.5",
    "@types/aws-lambda": "^8.10.145",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^20.11.24",
    "@typescript-eslint/parser": "^8.32.1",
    "api-extractor-config": "workspace:*",
    "esbuild": "^0.23.0",
    "eslint": "^9.26.0",
    "eslint-config-custom": "*",
    "nodemon": "^2.0.19",
    "tsconfig": "workspace:*",
    "tsdoc-config": "workspace:*",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  },
  "description": "TypeScript SDK for building integrations with Lightyear - the fastest and easiest way for developers to integrate web-based applications.",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "keywords": [
    "sdk",
    "integration",
    "typescript",
    "lightyear",
    "api"
  ]
}
